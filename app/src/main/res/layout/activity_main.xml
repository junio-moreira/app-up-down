<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/activity_main_txt_contador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_zero"
        app:layout_constraintTop_toTopOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintVertical_bias="0.6"
    />

    <Button
        android:id="@+id/activity_main_btn_aumentar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_main_txt_contador"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:text="@string/app_aumentar"
    />

    <Button
        android:id="@+id/activity_main_btn_diminuir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_main_btn_aumentar"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:text="@string/app_diminuir"
    />


    

</androidx.constraintlayout.widget.ConstraintLayout>